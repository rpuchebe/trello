<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Tittle</th>
      <th>Description</th>
      <th>Duration</th>
      <th>Start time</th>
      <th>Finish time</th>
      <th>User</th>
      <th>Check</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.tittle %></td>
        <td><%= task.description %></td>
        <td><%= task.duration %></td>
        <td><%= task.start_time %></td>
        <td><%= task.finish_time %></td>
        <td><%= task.user.name %></td>
        <td><%= task.check %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

